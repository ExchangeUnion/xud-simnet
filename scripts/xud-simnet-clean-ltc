cd ~/xud-simnet

source setup.bash

read -p "Are you sure you want to reset ltcd and lndltc (y/n)? " -n 1 -r
echo
if [[ ! $REPLY =~ ^[Yy]$ ]]
then
        exit 1
fi


xud-simnet-stop

git fetch
git pull

xud-simnet-upgrade-lnd

rm -rf ltcd/logs
rm -rf ltcd/data
rm -rf lndltc/data
rm -rf lndltc/logs

echo "ready now. Starting xud-simnet."

xud-simnet-start

